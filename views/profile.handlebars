<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Profile Details for {{this.username}}</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="./Avatar.jpg" class="img-circle img-responsive"> </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>First Name:</td>
                    <td>{{this.firstname}}</td>
                  </tr>
                  <tr>
                    <td>Last Name:</td>
                    <td>{{this.lastname}}</td>
                  </tr>
                  <tr>
                    <td>Mobile Number:</td>
                    <td>{{this.mob_no}}</td>
                  </tr>
                  <tr>
                    <td>Food Allergies:</td>
                    <td>{{this.food_allergies}}</td>
                  </tr>
                  <tr>
                    <td>Favourite Games:</td>
                    <td>{{this.favorite_games}}</td>
                  </tr>
                  <tr>
                    <td>Drink Preferences:</td>
                    <td>{{this.drink_preferences}}</td>
                  </tr>
                  <tr>
                    <td>Board Games Owned:</td>
                    <td>{{this.board_games_owned}}</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
